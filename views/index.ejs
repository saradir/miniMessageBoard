<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mini Message Board</title>
</head>
<body>

    <div class="board">
        <% messages.map((message) => { %>
            <div>
                <div class="info"></div>
                    <span> User: <%= message.user %> </span>
                    <span> Date: <%= message.added %> </span>
                </div>
                <div>
                     Text: <%= message.text %>
                </div>
                <a href="/messages/<%= message.id %>">Open</a>

            </div>
        <% }) %>
    </div>

    <a href="new">New Message</a>
    
</body>
</html>